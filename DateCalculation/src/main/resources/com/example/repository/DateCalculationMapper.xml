<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapperとxmlのマッピング -->
<mapper namespace="com.example.repository.DateCalculationMapper">


<!-- 計算式取得 -->
	<select id="getFormulas" resultType="com.example.model.Formula">
		select * from formula
	</select>
	
<!-- 計算式登録 -->
	<insert id="registerFormula">
    insert into formula(
        formula_name
      , year
      , month
      , day
    )
    values (
        #{formulaName}
      , #{year}
      , #{month}
      , #{day}
    )
  </insert>
  
<!-- 計算式削除 -->
  <delete id="deleteFormula">
    delete from
      formula
    where
      formula_id = #{formulaId}
  </delete>
 
<!-- 更新前の計算式取得 -->
	<select id="getFormulaOne" resultType="com.example.model.Formula">
		select * from formula where formula_id = #{formulaId}
	</select>
	
<!-- 計算式更新 -->
	<update id="updateFormula">
    update formula set
        formula_name = #{formulaName}
      , year = #{year}
      , month = #{month}
      , day = #{day}
    where
    	formula_id = #{formulaId}
  </update>
</mapper>
