<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Mapperとxmlのマッピング -->
<mapper namespace="com.example.repository.UserMapper">

<!-- ユーザー登録 -->
	<insert id="setUser">
    insert into m_user(
        user_id
      , password
      , user_name
      , role
    )
    values (
        #{userId}
      , #{password}
      , #{userName}
      , #{role}
    )
  </insert>
  
  <!-- ログインユーザー情報取得 -->
  <select id="findLoginUser" resultType="com.example.model.MUser">
    select 
      * 
    from 
      m_user 
    where 
      user_id = #{userId}
  </select>

</mapper>
